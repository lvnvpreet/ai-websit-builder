<%- include('../partials/_header', { user: true }) %>

<div class="container mt-4">
  <div class="wizard-container">
    <div class="wizard-progress">
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= (step / totalSteps) * 100 %>%" aria-valuenow="<%= (step / totalSteps) * 100 %>" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="step-indicator">
        Step <%= step %> of <%= totalSteps %>: <%= title %>
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center">Website Information</h2>
        <p class="card-text text-center">Provide basic details about your website</p>
        
        <form action="/wizard/website-info" method="POST" class="wizard-form" id="websiteForm">
          <div class="form-group mb-3">
            <label for="websiteTitle">Website Title</label>
            <input type="text" class="form-control" id="websiteTitle" name="websiteTitle" placeholder="e.g., Star Plumbers, NY - Trusted Plumbing Experts" required value="<%= typeof data !== 'undefined' ? data.websiteTitle : '' %>">
            <div class="form-text">This appears in search results and browser tabs.</div>
          </div>
          
          <div class="form-group mb-3">
            <label for="websiteTagline">Website Tagline</label>
            <input type="text" class="form-control" id="websiteTagline" name="websiteTagline" placeholder="e.g., Reliable Plumbing Solutions for Homes and Businesses" value="<%= typeof data !== 'undefined' ? data.websiteTagline : '' %>">
            <div class="form-text">A short phrase that captures your business's value proposition.</div>
          </div>
          
          <div class="form-group mb-3">
            <label for="websiteType">Website Type</label>
            <select class="form-select" id="websiteType" name="websiteType" required>
              <option value="" selected disabled>Select website type</option>
              <option value="Business" <%= typeof data !== 'undefined' && data.websiteType === 'Business' ? 'selected' : '' %>>Business</option>
              <option value="Portfolio" <%= typeof data !== 'undefined' && data.websiteType === 'Portfolio' ? 'selected' : '' %>>Portfolio</option>
              <option value="E-commerce" <%= typeof data !== 'undefined' && data.websiteType === 'E-commerce' ? 'selected' : '' %>>E-commerce</option>
              <option value="Blog" <%= typeof data !== 'undefined' && data.websiteType === 'Blog' ? 'selected' : '' %>>Blog</option>
              <option value="Personal" <%= typeof data !== 'undefined' && data.websiteType === 'Personal' ? 'selected' : '' %>>Personal</option>
            </select>
          </div>
          
          <div class="form-group mb-3">
            <label for="websitePurpose">Website Purpose</label>
            <select class="form-select" id="websitePurpose" name="websitePurpose" required>
              <option value="" selected disabled>Select main purpose</option>
              <option value="Generating Leads" <%= typeof data !== 'undefined' && data.websitePurpose === 'Generating Leads' ? 'selected' : '' %>>Generating Leads</option>
              <option value="Providing Information" <%= typeof data !== 'undefined' && data.websitePurpose === 'Providing Information' ? 'selected' : '' %>>Providing Information</option>
              <option value="Selling Products" <%= typeof data !== 'undefined' && data.websitePurpose === 'Selling Products' ? 'selected' : '' %>>Selling Products</option>
              <option value="Showcasing Work" <%= typeof data !== 'undefined' && data.websitePurpose === 'Showcasing Work' ? 'selected' : '' %>>Showcasing Work</option>
              <option value="Building Community" <%= typeof data !== 'undefined' && data.websitePurpose === 'Building Community' ? 'selected' : '' %>>Building Community</option>
            </select>
          </div>
          
          <div class="wizard-navigation d-flex justify-content-between">
            <a href="/wizard/business-info" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary">Next <i class="fas fa-arrow-right"></i></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>
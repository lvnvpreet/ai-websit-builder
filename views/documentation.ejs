<%- include('partials/_header') %>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-12">
      <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
          <h2 class="h5 mb-0"><%= title %></h2>
        </div>
        <div class="card-body documentation-content">
          <%- content %>
        </div>
        <div class="card-footer bg-light">
          <a href="/profile/ai-settings" class="btn btn-sm btn-outline-primary">
            <i class="fas fa-arrow-left"></i> Back to AI Settings
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .documentation-content h1 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  .documentation-content h2 {
    font-size: 1.5rem;
    margin-top: 2rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 1px solid #e9ecef;
  }
  .documentation-content h3 {
    font-size: 1.2rem;
    margin-top: 1.5rem;
    margin-bottom: 0.75rem;
  }
  .documentation-content p {
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  .documentation-content ul, .documentation-content ol {
    margin-bottom: 1rem;
    padding-left: 1.2rem;
  }
  .documentation-content li {
    margin-bottom: 0.5rem;
  }
  .documentation-content code {
    padding: 0.2rem 0.4rem;
    background-color: #f8f9fa;
    border-radius: 0.25rem;
  }
  .documentation-content hr {
    margin: 2rem 0;
  }
</style>

<%- include('partials/_footer') %>

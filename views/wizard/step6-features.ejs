<%- include('../partials/_header', { user: true }) %>

<div class="container mt-4">
  <div class="wizard-container">
    <div class="wizard-progress">
      <div class="progress">
        <div class="progress-bar" role="progressbar" style="width: <%= (step / totalSteps) * 100 %>%" aria-valuenow="<%= (step / totalSteps) * 100 %>" aria-valuemin="0" aria-valuemax="100"></div>
      </div>
      <div class="step-indicator">
        Step <%= step %> of <%= totalSteps %>: <%= title %>
      </div>
    </div>
    
    <div class="card">
      <div class="card-body">
        <h2 class="card-title text-center">Additional Features</h2>
        <p class="card-text text-center">Enhance your website with these additional features</p>
        
        <form action="/wizard/features" method="POST" class="wizard-form" id="featuresForm">
          <div class="row">
            <div class="col-md-6">
              <div class="feature-card card mb-3">
                <div class="card-body">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="hasNewsletter" name="hasNewsletter" <%= typeof data !== 'undefined' && data.hasNewsletter ? 'checked' : '' %>>
                    <label class="form-check-label" for="hasNewsletter">Newsletter Sign-up</label>
                  </div>
                  <p class="text-muted small mt-2">Add a newsletter sign-up form to capture visitor emails</p>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="feature-card card mb-3">
                <div class="card-body">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="hasGoogleMap" name="hasGoogleMap" <%= typeof data !== 'undefined' && data.hasGoogleMap ? 'checked' : '' %>>
                    <label class="form-check-label" for="hasGoogleMap">Google Maps Integration</label>
                  </div>
                  <p class="text-muted small mt-2">Display your business location on Google Maps</p>
                  
                  <div id="googleMapUrlGroup" class="<%= typeof data !== 'undefined' && data.hasGoogleMap ? '' : 'd-none' %>">
                    <label for="googleMapUrl" class="form-label">Google Map URL</label>
                    <input type="text" class="form-control" id="googleMapUrl" name="googleMapUrl" placeholder="https://maps.app.goo.gl/your-location" value="<%= typeof data !== 'undefined' ? data.googleMapUrl : '' %>">
                  </div>
                </div>
              </div>
            </div>
            
            <div class="col-md-6">
              <div class="feature-card card mb-3">
                <div class="card-body">
                  <div class="form-check form-switch">
                    <input class="form-check-input" type="checkbox" id="hasImageSlider" name="hasImageSlider" <%= typeof data !== 'undefined' && data.hasImageSlider ? 'checked' : '' %>>
                    <label class="form-check-label" for="hasImageSlider">Image Slider</label>
                  </div>
                  <p class="text-muted small mt-2">Add an image slider to showcase your products or services</p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="wizard-navigation d-flex justify-content-between mt-4">
            <a href="/wizard/footer" class="btn btn-secondary"><i class="fas fa-arrow-left"></i> Back</a>
            <button type="submit" class="btn btn-primary">Review & Generate <i class="fas fa-arrow-right"></i></button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>
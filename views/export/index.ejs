<%- include('../partials/_header', { user: true }) %>

<div class="container mt-4">
  <div class="export-container">
    <h1 class="mb-4">Export Your Website</h1>
    
    <div class="row">
      <div class="col-lg-8 mx-auto">
        <div class="card">
          <div class="card-body">
            <h2 class="card-title">Select a Website to Export</h2>
            
            <% if (websites && websites.length > 0) { %>
              <div class="website-list mt-4">
                <% websites.forEach(website => { %>
                  <div class="website-export-card mb-4">
                    <div class="card">
                      <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                          <div>
                            <h3 class="mb-2"><%= website.businessName %></h3>
                            <p class="text-muted mb-2"><%= website.businessDescription.substring(0, 100) %>...</p>
                            <div class="website-meta">
                              <span class="badge bg-primary me-2">
                                <i class="fas fa-file-alt"></i> <%= website.pages ? website.pages.length : 0 %> Pages
                              </span>
                              <span class="badge bg-secondary">
                                <i class="fas fa-calendar-alt"></i> <%= new Date(website.createdAt).toLocaleDateString() %>
                              </span>
                            </div>
                          </div>
                          <a href="/export/<%= website._id %>" class="btn btn-primary">
                            <i class="fas fa-arrow-right"></i> Select
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                <% }); %>
              </div>
            <% } else { %>
              <div class="alert alert-info">
                <i class="fas fa-info-circle"></i> You don't have any completed websites to export yet.
                <a href="/wizard" class="alert-link">Create a website</a> to get started.
              </div>
            <% } %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('../partials/_footer') %>